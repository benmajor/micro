<div class="post post-{{ post.slug }}">
	<h3>
		<a href="{{ post.url }}">{{ post.title }}</a>
	</h3>
	<div class="post-meta">
		{{ post.created|date('jS F Y') }} in 
		{% for cat in post.categories %}
		<a href="{{ cat.url }}">{{ cat.name }}</a>, 
		{% endfor %}
	</div>
	<div class="post-excerpt">
		{{ post.excerpt }}
	</div>
</div>